{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedUrl": "",
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth_service_api",
        "Match": {
          "Path": "auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" },
          { "PathPrefix": "/api" }
        ]
      },
      "testing_route": {
        "ClusterId": "testing_service_api",
        "Match": {
          "Path": "testing/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/testing" },
          { "PathPrefix": "/api" }
        ]
      },
      "feedback_route": {
        "ClusterId": "feedback_service_api",
        "Match": {
          "Path": "feedback/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/feedback" },
          { "PathPrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "auth_service_api": {
        "Destinations": {
          "destination1": {
            "Address": "https://testing_authorization_api:5202/"
          }
        }
      },
      "testing_service_api": {
        "Destinations": {
          "destination1": {
            "Address": "https://testing_testing_api:5302/"
          }
        }
      },
      "feedback_service_api": {
        "Destinations": {
          "destination1": {
            "Address": "https://testing_feedback_api:5402/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
